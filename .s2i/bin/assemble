#!/bin/bash

set -e

shopt -s dotglob
echo "---> Installing application source..."
DEST=`pwd`
cd /tmp/src/
curl https://getcomposer.org/installer | php
make COMPOSER_CMD=`pwd`/composer.phar build
cp settings.s2i.php app/sites/default/settings.php

mv /tmp/src/app/* $DEST

# Fix source directory permissions
fix-permissions ./
